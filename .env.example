# ============================================
# Silicon-Empire Environment Variables
# Copy to .env and fill in your values
# ============================================

# === OpenRouter (Unified LLM Gateway) ===
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_APP_NAME=silicon-empire

# === Model Assignment ===
MODEL_GM=openai/gpt-4o
MODEL_CGO=openai/gpt-4o
MODEL_COO=openai/gpt-4o
MODEL_CRO=openai/gpt-4o
MODEL_CTO=anthropic/claude-3.5-sonnet
MODEL_CREATIVE=anthropic/claude-3.5-sonnet
MODEL_ANALYSIS=google/gemini-flash-1.5

# === PostgreSQL (本地, 替代 Supabase) ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=silicon_empire
POSTGRES_USER=silicon
POSTGRES_PASSWORD=silicon2026
DATABASE_URL=postgresql://silicon:silicon2026@localhost:5432/silicon_empire

# === Redis ===
REDIS_URL=redis://localhost:6379/0

# === Feishu / Lark (6-Bot Multi-Agent) ===
FEISHU_GM_APP_ID=cli_xxxxxxxxxxxx
FEISHU_GM_APP_SECRET=xxxxxxxxxxxx
FEISHU_CGO_APP_ID=cli_xxxxxxxxxxxx
FEISHU_CGO_APP_SECRET=xxxxxxxxxxxx
FEISHU_CRO_APP_ID=cli_xxxxxxxxxxxx
FEISHU_CRO_APP_SECRET=xxxxxxxxxxxx
FEISHU_COO_APP_ID=cli_xxxxxxxxxxxx
FEISHU_COO_APP_SECRET=xxxxxxxxxxxx
FEISHU_CTO_APP_ID=cli_xxxxxxxxxxxx
FEISHU_CTO_APP_SECRET=xxxxxxxxxxxx
FEISHU_SYSTEM_APP_ID=cli_xxxxxxxxxxxx
FEISHU_SYSTEM_APP_SECRET=xxxxxxxxxxxx

# Feishu Channels (群 chat_id, 创建群后填入)
FEISHU_DECISION_CHAT_ID=oc_xxxxxxxxxxxx
FEISHU_EXECUTION_CHAT_ID=oc_xxxxxxxxxxxx
FEISHU_ALERT_CHAT_ID=oc_xxxxxxxxxxxx

# === n8n ===
N8N_WEBHOOK_URL=http://localhost:5678/webhook/silicon-empire

# === Gmail API ===
GMAIL_CREDENTIALS_PATH=./secrets/gmail_credentials.json
GMAIL_TOKEN_PATH=./secrets/gmail_token.json

# === Shopify ===
SHOPIFY_STORE_URL=https://your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxx

# === LangSmith (Observability) ===
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=lsv2_xxxxxxxxxxxx
LANGCHAIN_PROJECT=silicon-empire

# === System Config ===
MAX_ITERATION_COUNT=5
TOKEN_BUDGET_PER_SESSION=50000
AUTO_APPROVE_PROFIT_THRESHOLD=20
AUTO_APPROVE_RISK_THRESHOLD=2
LOG_LEVEL=INFO
