      "description": "飞书消息 (4 tools, 6-bot)"
    },
    "gmail": {
      "command": "python",
      "args": ["-m", "src.mcp_servers.gmail_server"],
      "env": {},
      "description": "邮件 (4 tools)"
    },
    "shopify": {
      "command": "python",
      "args": ["-m", "src.mcp_servers.shopify_server"],
      "env": {},
      "description": "电商 (4 tools, Shopify Admin API)"
    },
    "filesystem": {
      "command": "python",
      "args": ["-m", "src.mcp_servers.filesystem_server"],
