{
  "mcpServers": {
    "supabase": {
      "command": "python",
      "args": ["-m", "src.mcp_servers.supabase_server"],
      "env": {},
      "description": "数据库读写 (12 tools, 6 表覆盖)"
    },
    "playwright": {
      "command": "python",
      "args": ["-m", "src.mcp_servers.playwright_server"],
